<h1>Welcome to Five Step Goals!</h1>
<% if user_signed_in? %>
<h3>Create a New Goal</h3>
<%= link_to "New Goal", new_main_goal_path %>
<% end %>
<h3>Community Goals:</h3>
<% @main_goals.each do |main_goal| %>
    <p><%= link_to "#{main_goal.title} - #{main_goal.status}", main_goal_path(main_goal) %></p>
<% end %>

<h3>Goals by Category:</h3>
<% @categories.each do |category| %>
  <%= link_to category.name, category_path(category) %>
<% end %>
